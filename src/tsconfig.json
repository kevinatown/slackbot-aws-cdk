{
    "compilerOptions": {
        "target":"ES2018",
        "module": "commonjs",
        "lib": ["es2016", "es2017.object", "es2017.string"],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}